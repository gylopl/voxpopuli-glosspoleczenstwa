<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base"></style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="colorButtonNormal">@color/red_500</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="TextViewTitle">
        <item name="android:textSize">@dimen/font_title</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewHeadline">
        <item name="android:textSize">@dimen/font_larger</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ContentTextViewHeadlineSmall">
        <item name="android:textSize">@dimen/font_normal_headline</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ContentTextViewNormal">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ContentTextViewSmall">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Headline.White" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CardVotingTextAppearanceTextAppearance.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="About.Group.Text" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="AppTheme.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="AppTheme.CardView" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/red_800_alpha</item>
        <item name="cardCornerRadius">4dp</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/ContentTextViewNormal</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!-- Used for the background -->
        <item name="android:background">@color/colorPrimary</item>
    </style>

</resources>
