<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/material_drawer_account_header"
    android:layout_width="match_parent"
    android:layout_height="@dimen/material_drawer_account_header_height"
    android:background="@color/colorPrimary"
    android:paddingTop="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/material_drawer_account_header_avatar"
        android:layout_width="@dimen/material_drawer_account_header_selected_image"
        android:layout_height="@dimen/material_drawer_account_header_selected_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/material_drawer_account_header_horizontal_bottom"
        android:layout_marginLeft="@dimen/material_drawer_vertical_padding"
        android:layout_marginTop="@dimen/material_drawer_account_header_horizontal_top"
        android:clickable="true"
        android:elevation="2dp"
        android:src="@drawable/ic_account_circle_white_64dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/material_drawer_account_header_secondary_image"
        android:layout_height="@dimen/material_drawer_account_header_secondary_image"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/material_drawer_vertical_padding"
        android:layout_marginTop="28dp"
        android:background="@drawable/orzel_b"
        android:elevation="2dp" />

    <TextView
        android:id="@+id/material_drawer_account_header_name"
        style="@style/ContentTextViewNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/material_drawer_account_header_email"
        android:layout_marginLeft="@dimen/material_drawer_vertical_padding"
        android:fontFamily="sans-serif-medium"
        android:lines="1"
        android:singleLine="true"
        android:text="Grzegorz Makowski" />

    <TextView
        android:id="@+id/material_drawer_account_header_email"
        style="@style/ContentTextViewSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/separatorFirst"
        android:layout_marginLeft="@dimen/material_drawer_vertical_padding"
        android:fontFamily="sans-serif"
        android:lines="1"
        android:singleLine="true"
        android:text="grzegorz.makowski.developer@gmail.com" />


    <View xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/separatorFirst"
        android:layout_width="match_parent"
        android:layout_height="0.75dip"
        android:layout_above="@+id/separatorshadow"
        android:background="@color/colorPrimaryDark" />

    <LinearLayout
        android:id="@+id/separatorshadow"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/menu_background"
        android:orientation="horizontal">

        <View xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/shadow" />
    </LinearLayout>
</RelativeLayout>